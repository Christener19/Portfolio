{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node",
        "config": {
          "include": ["api/package.json", "api/package-lock.json"]
        },
        "dev": {
          "port": 3000,
          "routes": [
            { "handle": "filesystem" },
            { "src": "/api/.*", "dest": "/api/index.js" },
            { "src": "/(.*)", "dest": "/$1" }
          ]
        }
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/contact",
        "dest": "Client/contact.js"
      },
      {
        "src": "/api/.*",
        "dest": "/api/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
  
  