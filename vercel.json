{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node",
        "config": {
          "include": ["api/package.json", "api/package-lock.json"]
        }
      },
      {
        "src": "Client/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/contact", "dest": "/api/index.js" },
      { "src": "/(.*)", "dest": "/$1" }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
